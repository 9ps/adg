{{#if (or prev next)}}
  <div class="prev_next">
    <h2 class="visuallyhidden">Previous/next navigation</h2>

    <ul>
    {{#if prev}}
      <li class="prev_next__link-wrapper prev_next__link-wrapper--previous">
        <a href="/{{prev.url}}" class="prev_next__link prev_next__link--previous">
          <span class="visuallyhidden">Previous:</span>
          <span class="text">{{prev.title}}</span>
        </a>
      </li>
    {{/if}}

    {{#if next}}
      <li class="prev_next__link-wrapper prev_next__link-wrapper--next">
        <a href="/{{next.url}}" class="prev_next__link prev_next__link--next">
          <span class="visuallyhidden">Next:</span>
          <span class="text">{{next.title}}</span>
        </a>
      </li>
    {{/if}}
  </div>
{{/if}}
