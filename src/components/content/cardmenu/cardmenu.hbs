<nav class="cardmenu{{#if menuitem.0.isSection}} cardmenu-section{{else}} cardmenu-article{{/if}}">
    <div class="text_container">
      <h2>Sub pages</h2>
    </div>

    <ul class="cardmenu--list">
      {{#each menuitem}}
        <li class="cardmenu--list--item" role="presentation">
            <a class="cardmenu--card--link{{#if modifier}} cardmenu--card--link-{{modifier}}{{/if}}" href="/{{url}}">
              {{#if isSection}}
                {{> "content/cardmenu/cardmenu-section-card" }}
              {{else}}
                {{> "content/cardmenu/cardmenu-article-card" }}
              {{/if}}
            </a>
        </li>
      {{/each}}
    </ul>
</nav>
